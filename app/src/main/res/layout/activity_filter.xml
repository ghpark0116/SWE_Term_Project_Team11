<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/left"
            android:contentDescription="뒤로가기" />

        <TextView
            android:id="@+id/filter_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="필터 적용"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/apply_filter_button">

        <!-- Price Filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격"
                android:textSize="16sp"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end">

                <EditText
                    android:id="@+id/min_price"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="최소"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/max_price"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="최대"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>

        <!-- Transaction Method -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="희망 거래 방식"
                android:textSize="16sp"
                android:gravity="center_vertical" />

            <RadioGroup
                android:id="@+id/transaction_method_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end">

                <RadioButton
                    android:id="@+id/face_to_face"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대면" />

                <RadioButton
                    android:id="@+id/non_face_to_face"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비대면"
                    android:layout_marginStart="8dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Transaction Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="희망 거래 장소"
                android:textSize="16sp"
                android:gravity="center_vertical" />

            <RadioGroup
                android:id="@+id/transaction_location_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end">

                <RadioButton
                    android:id="@+id/science_campus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자연과학캠퍼스" />

                <RadioButton
                    android:id="@+id/humanities_campus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인문사회캠퍼스"
                    android:layout_marginStart="8dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- 카테고리 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품 카테고리"
                android:textSize="16sp"
                android:gravity="center_vertical" />

            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:entries="@array/product_categories"/>
        </LinearLayout>

        <!-- Product Name/Keyword -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품명/키워드"
                android:textSize="16sp"
                android:gravity="center_vertical" />

            <EditText
                android:id="@+id/product_keyword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:hint="키워드 입력" />
        </LinearLayout>

        <!-- Major -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공명"
                android:textSize="16sp"
                android:gravity="center_vertical" />

            <Spinner
                android:id="@+id/major_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:entries="@array/skku_departments"/>
        </LinearLayout>

        <!-- Product State -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품 상태"
                android:textSize="16sp"
                android:gravity="center_vertical" />

            <RadioGroup
                android:id="@+id/product_state_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end">

                <RadioButton
                    android:id="@+id/state_bad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나쁨" />

                <RadioButton
                    android:id="@+id/state_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보통"
                    android:layout_marginStart="8dp" />

                <RadioButton
                    android:id="@+id/state_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="좋음"
                    android:layout_marginStart="8dp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <!-- Apply Filter Button -->
    <Button
        android:id="@+id/apply_filter_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="필터 적용하기"
        android:backgroundTint="@color/green_2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>



